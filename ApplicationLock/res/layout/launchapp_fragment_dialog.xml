<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/applaunch_activity_vertical_margin"
    android:paddingStart="@dimen/applaunch_activity_horizontal_margin"
    android:paddingEnd="@dimen/applaunch_activity_horizontal_margin"
    android:paddingTop="@dimen/applaunch_activity_vertical_margin" >
    
    <ListView
        android:id="@+id/listViewApp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        android:cacheColorHint="#00000000"
        android:descendantFocusability="blocksDescendants"
        android:footerDividersEnabled="true" />

</RelativeLayout>
